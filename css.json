{
	// Place your snippets for css here. Each snippet is defined under a snippet name and has a prefix, body and
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }
	"charset": {
		"prefix": "@c",
		"body": "@charset \"UTF-8\";",
		"description": "文字コード"
	},
	"f-famiry": {
		"prefix": "ffy",
		"body": "font-family: "Helvetica Neue", Arial, "Hiragino Kaku Gothic ProN", "Hiragino Sans", Meiryo, sans-serif;",
		"description": "フォントファミリー初期値",
	},
	"noto": {
		"prefix": "noto",
		"body": "@import url(http://fonts.googleapis.com/earlyaccess/notosansjapanese.css);\nbody{\nfont-family: \"Noto Sans Japanese\", serif;",
		"description": "Noto Sans JP"
	},
	"comment": {
		"prefix": "///",
		"body": [
			"/*-------------------------",
			"\t${1}",
			"-------------------------*/"
		],
		"description": "複数行コメント"
	},
	"bg+": {
		"prefix": "bg",
		"body": "background: ${1:gray} url(\"../images/${2:.jpg}\") ${3:0 0} ${4:/ cover} ${5:no-repeat};",
		"description": "背景画像一括指定"
	},
	"blend-mode": {
		"prefix": "bbm",
		"body": "background-blend-mode: ${1:multiply};",
		"description": "背景ブレンドモード(条算)"
	},
	"text-indent": {
		"prefix": "ti-",
		"body": "text-indent: -9999px;",
		"description": "字送り-9999px"
	},
	"list-style-type": {
		"prefix": "ln",
		"body": "list-style-type: none;",
		"description": "リストスタイル無し"
	},
	"mediaquery": {
		"prefix": "@m",
		"body": [
			"@media screen and (${1:max}-width: ${2:768px}) {",
			"}"
		],
		"description": "メディアクエリ"
	},
	"mediaquery100%": {
		"prefix": "@m+",
		"body": [
			"@media screen and (${1:max}-width: ${2:768px}) {",
			"\t\t${3:width: 100%;}",
			"\t}",
			"}"
		],
		"description": "メディアクエリ幅100%"
	}
}
